<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    <set android:interpolator="@android:anim/anticipate_overshoot_interpolator">
        <objectAnimator
            android:propertyName="scaleX"
            android:valueTo="1.1"
            android:valueType="floatType"
            android:duration="90"/>
        <objectAnimator
            android:propertyName="scaleY"
            android:valueTo="1.1"
            android:valueType="floatType"
            android:duration="90"/>

    </set>
    <set android:interpolator="@android:anim/overshoot_interpolator">
        <objectAnimator
            android:propertyName="scaleX"
            android:valueTo="1.0"
            android:valueType="floatType"
            android:duration="60"/>
        <objectAnimator
            android:propertyName="scaleY"
            android:valueTo="1.0"
            android:valueType="floatType"
            android:duration="60"/>

    </set>

</set>