<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false"
        android:state_pressed="false"
        android:drawable="@drawable/dot_off"/>
    <item android:state_checked="true"
        android:state_pressed="false"
        android:drawable="@drawable/dot_on"/>
    <item android:state_pressed="true"
        android:state_checked="false">
        <ripple android:color="@android:color/black">
            <item android:drawable="@drawable/dot_off"/>
        </ripple>
    </item>
    <item android:state_pressed="true"
        android:state_checked="true">
        <ripple android:color="@android:color/white">
            <item android:drawable="@drawable/dot_on"/>
        </ripple>
    </item>
</selector>